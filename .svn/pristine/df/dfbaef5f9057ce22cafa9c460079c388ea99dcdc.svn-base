html {
  font-size: 62.5%;
  height: 100%;
  font-family: "PingFang SC","Microsoft YaHei",Arial,Helvetica,sans-serif;
  background-color: @pbc;
  color: @fc;
}

ul, li, ol, h1, h2, h3, p { padding: 0; margin: 0;}
ul, li, ol {
  list-style: none;
}

span {
  display: inline-block;
}

a {
  text-decoration: none;
  color: @fc;
}

.hd, .bd{
  position: relative;
}
.hd { height: 44px; z-index: 14; }
.bd {
  margin-bottom: 60px;
  -webkit-overflow-scrolling: touch;
}
.hide {
  display: none;
}

.show {
  display: block;
}

.abs-left {
  position: absolute;
  top: 0;
  left: 0;
}

.abs-right {
  position: absolute;
  top: 0;
  right: 0;
}

.font-over-flow {
  white-space:nowrap;
  word-break: break-all;
  overflow:hidden;
  text-overflow:ellipsis;
}

.font-over-hide {
  white-space:nowrap;
  word-break: break-all;
  overflow:hidden;
}

.opacity100{
  opacity: 1 !important;
}

.opacity50{
  opacity: .5 !important;
}

.clearfix {
  &:before,
  &:after {
    content: " ";
    display: table;
  }
  &:after {
    clear: both;
  }
}

.g-shadow-up {
  box-shadow: 0px -1px 1px 0 #dedede;
}

.g-shadow-down {
  box-shadow: 0px 3px 3px 0 #dedede;
}

// Tips
.log-wrap {
  position: fixed; top: 40%; left: 20%;  width: 60%; z-index: 20;
  .log-tip { padding: 15px;   border: 1px solid transparent; text-align: center;  border-radius: 5px;    background-color:  @gray-base * 3;  color: @white;  font-size: 1.6rem;  opacity: 0.95; word-break: break-all }
  .close {  float: right; font-size: 21px;    font-weight: bold;    line-height: 1;    color: @white;    text-shadow: 0 1px 0 @white; position: absolute; right: .7rem; top: 30%;  }
}

