// flex
.css3-flex() {
  display: -webkit-box; display: flex;  display: -webkit-flex;
}
.css3-flex-1 {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
}
.css3-transition (@second:1s) {
  transition: all @second;
  -moz-transition: all @second; /* Firefox 4 */
  -webkit-transition: all @second; /* Safari å’Œ Chrome */
  -o-transition: all @second;
}
.ios-scroll() {
  -webkit-overflow-scrolling: touch;
}
